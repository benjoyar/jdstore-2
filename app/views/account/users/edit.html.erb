<div class="row account-box">
  <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2 account-content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-user-circle-o"></span> <%= t('个人资料修改') %></h2>
      <hr>
      <br />
      <h5>我的E-Mail: <%= current_user.email %></h5>
      <%= simple_form_for [:account, @user] do |f| %>
        <div class="form-inputs">
          <%= f.input :username, :label => "用户名", error: t('请输入用户名'), required: true %>
        </div>
        <div class="form-actions">
          <%= f.submit "保存更改", class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
