<h2> Edit Product </h2>
<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.image.present? %>
   <span>目前商品图</span> <br />
   <%= image_tag(@product.image.thumb.url) %>
   <% else %>
   <span>目前商品无图</span>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>
  
  <div class="group">
    <%= f.input :is_hidden %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
