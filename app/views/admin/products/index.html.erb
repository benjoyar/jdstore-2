<div class="products-index">
  <h2>后台商品列表</h2>
  <div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to("新增商品", new_admin_product_path, :class => "btn btn-primary btn-sm" ) %>
  </div>
  <br />
  <br />
  <div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="text-center">编号</th>
        <th class="text-center" width="220">产品图片</th>
        <th class="text-center">品名</th>
        <th class="text-center">库存（本/套）</th>
        <th class="text-center">价格（元）</th>
        <th class="text-center">选项</th>
        <th class="text-center">创建时间</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="text-center">
            <%= product.id %>
          </td>
          <td>
            <%= link_to admin_product_path(product) do %>
              <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to(product.title, admin_product_path(product)) %>
          </td>
          <td class="text-right">
            <%= product.quantity %>
          </td>
          <td class="text-right">
            <%= product.price %>
          </td>
          <td class="text-center">
            <%= link_to("编辑", edit_admin_product_path(product)) %> |
            <%= link_to("删除", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
          </td>
          <td class="text-center">
            <%= product.created_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
