<div class="col-md-10 col-lg-8 admin-data-box">
  <hr style="size:2px" />
  <%= simple_form_for [:admin, @product] do |f| %>
    <!-- 判断是否为new页面 -->
    <% if @product.new_record? %>
    <% else %>
    <!-- 显示商品图片 -->
      <div class='group'>
        <% if @product.image.present? %>
          <span>目前商品图</span> <br>
          <%= image_tag(@product.image.thumb.url) %>
        <% end %>
      </div>
    <% end %>
    <br />
    <!-- 上传图片 -->
    <div class="group">
      <%= f.input :image, :label => t('上传/更改商品图片'), as: :file %>
    </div>
    <!-- 商品名称 -->
    <div class="group">
      <%= f.input :title, :label => t('商品名称'), input_html: { class: 'width-50' } %>
    </div>
    <!-- 商品叙述 -->
    <div class="group">
      <%= f.input :description, :label => t('商品描述'), input_html: { class: 'height-400' } %>
    </div>
    <!-- 商品价格 -->
    <div class="group">
      <%= f.input :price, :label => t('商品售价'), input_html: { class: 'width-25' } %>
    </div>
     <span class="hidden-box"><%= f.input :is_hidden, :label => t('隐藏') %></span>
    <div class="form-actions">
      <%= f.submit "提交", class: 'btn btn-md btn-default' %>
    </div>
  <% end %>
</div>

