<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 user_setup_content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2><span class="fa fa-sign-in"></span> <%= t('用户登录') %></h2>
        <hr />
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, :label => false, placeholder: 'you@example.com', required: false, autofocus: true %>
            <%= f.input :password, :label => false, placeholder: '密码', required: false %>
            <%= f.input :remember_me, :label => "记住我", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "登录", class: "button" %>
          </div>
        <% end %>
        <hr />
        <div class="account">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
