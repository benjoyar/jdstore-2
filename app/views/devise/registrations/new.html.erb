<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 user_setup_content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-user-circle-o"></span> <%= t('用户注册') %></h2>
      <hr />
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => false, placeholder: 'you@example.com', error: '请输入您的电子邮箱', required: true, autofocus: true %>
          <%= f.input :username, :label => false, placeholder: '用户名', error: '请输入您的用户名称', required: true %>
          <%= f.input :password, :label => false, placeholder: '请输入6-16位数的密码', error: '请输入6-16位数的密码', required: true, input_html: { maxlength: 16 } %>
          <%= f.input :password_confirmation, :label => false, placeholder: '请再次输入以确认密码', error: t('密码不符，请重新输入'), required: true, input_html: { maxlength: 16 } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, '注册', class: "button" %>
        </div>
      <% end %>
      <hr />
        <div class="account">
          <%= render "devise/shared/links" %><br />
        </div>
      </div>
    </div>
  </div>
</div>
